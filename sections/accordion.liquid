<section class="home-section clearfix picture-block content-area accordion-wrap">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
       {%- assign heading = block.settings.title -%}
       {%- assign content = block.settings.content -%}
        <div class="accordion">
          <div class="accordion-item">
            <div class="accordion-header picture-block-heading" onclick="toggleAccordion(this)">
              {{ heading }}
              <span class="toggle-icon">+</span>
            </div>
            <div class="accordion-content">
              {{ content }}
            </div>
          </div>
      </div>
    {% endfor %}
  {% endif %}
</section>
{% schema %}
{
   "name":"Accordion",
   "class":"shopify-section--accordion",
    "max_blocks": 1,
   "blocks":[
      {
         "type":"plain_text",
         "name":"Accordion Content",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Heading",
               "default":"Accordion heading here"
            },
            {
               "type":"liquid",
               "id":"content",
               "label":"Accordion Content here",
               "default":"<p>Use this section to welcome customers to your store, say a bit about your brand, or share news and seasonal promotions.</p>"
            }
         ]
      }
   ],
   "presets":[
      {
         "category":"Accordion",
         "name":"Accordion"
      }
   ],
   "disabled_on":{
      "groups":[
         "*"
      ]
   }
}
{% endschema %}

{% style %}
  
.home-section.accordion-wrap {
  background-color: white !important;
}
.column {
  flex: 50%;
}
li {
  line-height: 2em;
}
.toggle-icon {
  float: right;
}
.content-area {
  padding-top: 0;
  margin-top: 0;
}
h3 {
  font-size: 24px;
}
.subtitle {
  font-size: 16px;
}
.inner-section {
  margin-bottom: 32px;
}
.dimensions {
  font-weight: bold;
  padding-left: 4px;
}
table {
  margin-top: 16px;
}
td {
  padding: 8px 32px;
}
{% endstyle %}

